                        <id>generate-java</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>

                        <configuration>
                            <generator>
                                <target>
                                    <packageName>org.jooq.mcve.java</packageName>
                                    <directory>src/main/java</directory>
                                </target>
